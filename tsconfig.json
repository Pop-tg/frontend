{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["../api/src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "target": "es2019",
    "module": "ESNEXT",
    "strict": true,
    "moduleResolution": "node",
    "types": ["svelte"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
